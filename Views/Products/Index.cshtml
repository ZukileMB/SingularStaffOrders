@model SingularStaffOrders.Models.ViewModels.ProductsViewModel
@{
    ViewBag.Title = "Products";
}

<h2>
    Products
</h2>
<div class="container body-default">
    <div class="panel panel-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            <div class=" col-md-12">
                <div class="form-group">
                    Title :
                    @Html.TextBoxFor(m => m.ProductTitle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductTitle, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    Description :
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    Price :
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>

            </div>

        </div>

        <div class="row">
            <input type="button" value="Save" name="Save" class="btn btn-primary" id="btnSave" />
        </div>
    </div>
</div>

